[core]
  	editor = vim
[color]
  	branch = auto
  	diff = auto
  	status = auto
[color "branch"]
  	current = yellow reverse
  	local = yellow
  	remote = green
[color "diff"]
  	meta = yellow bold
  	frag = magenta bold
  	old = red bold
  	new = green bold
[color "status"]
  	added = yellow
  	changed = green
  	untracked = cyan
[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    lg = log --pretty=format:'%h %s' --graph
    pullify = "config --add remote.forked.fetch '+refs/pull/*/head:refs/remotes/forked/pr/*'"

